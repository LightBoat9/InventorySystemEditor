onready var inventory = get_parent().get_node(\"Inventory\")
onready var drop_inv = get_parent().get_node(\"GridContainer\")

func _pressed():
	if inventory.has_item(0):
		drop_inv.add_item(inventory.remove_item(inventory.find_item(0)))"

