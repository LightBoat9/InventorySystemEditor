script/source = "extends CanvasLayer

onready var Inv = get_parent().get_node(\"InventorySimple\")
onready var DimBG = get_node(\"DimBG\")
onready var HSlots = DimBG.get_node(\"HSlots/HSlider\")
onready var VSlots = DimBG.get_node(\"VSlots/HSlider\")

onready var OffsetBG = get_node(\"OffsetBG\")
onready var HOffset = OffsetBG.get_node(\"HOffset/HSlider\")
onready var VOffset = OffsetBG.get_node(\"VOffset/HSlider\")

func _ready():
	HSlots.connect(\"value_changed\", self, \"hslots_update\")
	VSlots.connect(\"value_changed\", self, \"vslots_update\")
	HOffset.connect(\"value_changed\", self, \"hoffset_update\")
	VOffset.connect(\"value_changed\", self, \"voffset_update\")
	set_process_input(true)
	
func _input(event):
	if event.is_action_pressed(\"ui_fullscreen\"):
		OS.window_fullscreen = not OS.window_fullscreen
	
func hslots_update(num):
	Inv.hslots = int(num)
	
func vslots_update(num):
	Inv.vslots = int(num)
		
func hoffset_update(num):
	Inv.hoffset = int(num)
		
func voffset_update(num):
	Inv.voffset = int(num)"

