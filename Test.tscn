func _toggled(button_pressed):
	if button_pressed:
		for x in get_tree().get_nodes_in_group(\"inventory_nodes\"):
			x.debug_in_game = true
	else:
		for x in get_tree().get_nodes_in_group(\"inventory_nodes\"):
			x.debug_in_game = false"

